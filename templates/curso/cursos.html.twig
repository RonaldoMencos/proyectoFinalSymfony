{% extends('base.html.twig') %}

{% block title %}
    <title>Listado de cursos</title>
{% endblock %}

{% block body %}
    <h1 class="text-center">Cat√°logo de Cursos</h1>
    <a href="{{path('createCurso')}}" class="btn btn-secondary">Nuevo</a>
    <table class="table table-striped table-hover">
        <thead>
            <th>#</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </thead>
        <tbody>
            {% for curso in listCursos %}
                <tr>
                    <td>{{curso.id}}</td>
                    <td>{{curso.nombre}}</td>
                    <td>
                        <a href="{{path('updateCurso',{'id': curso.id})}}" class="btn btn-primary">Editar</a>
                        <a href="{{path('deleteCurso',{'id': curso.id})}}" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}