{% extends('base.html.twig') %} {% block title %}
<title>Reporte de alumnos</title>
{% endblock %} {% block body %}
<h1 class="text-center">Reporte de Alumnos</h1>
{{ form_start(formAlumno) }}
<div class="row mb-2 d-flex align-items-center">
  <div class="col-10">
    {{ form_row(formAlumno.carrera) }}
  </div>
</div>
<div class="row">
  <div class="col-12 col-md-1">
    {{ form_row(formAlumno.submit) }}
  </div>
  <div class="col-12 col-md-2">
    <a class="btn btn-success" href="{{ path('reportExcelAlumnos') }}"
      >Exportar Excel</a
    >
  </div>
</div>
{{ form_end(formAlumno) }}
<table class="table table-striped table-hover">
  <thead>
    <th>#</th>
    <th>Nombres</th>
    <th>Apellidos</th>
    <th>Fecha Nacimiento</th>
    <th>Carrera</th>
    <th>Fotograf√≠a</th>
  </thead>
  <tbody>
    {% for alumno in listAlumnos %}
    <tr>
      <td>{{ alumno.id }}</td>
      <td>{{ alumno.nombres }}</td>
      <td>{{ alumno.apellidos }}</td>
      <td>{{ alumno.fechaNacimiento | date('d-m-Y') }}</td>
      <td>{{ alumno.carrera.nombre }}</td>
      <td>
        <img
          width="50"
          height="50"
          src="{{ asset('./uploads/fotos/' ~ alumno.foto) }}"
        />
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}
