{% extends('base.html.twig') %}

{% block title %}
    <title>Listado de semestres</title>
{% endblock %}

{% block body %}
    <h1 class="text-center">Cat√°logo de Semestres</h1>
    <a href="{{path('createSemestre')}}" class="btn btn-secondary">Nuevo</a>
    <table class="table table-striped table-hover">
        <thead>
            <th>#</th>
            <th>Nombre</th>
            <th>Acciones</th>
        </thead>
        <tbody>
            {% for semestre in listSemestres %}
                <tr>
                    <td>{{semestre.id}}</td>
                    <td>{{semestre.nombre}}</td>
                    <td>
                        <a href="{{path('updateSemestre',{'id': semestre.id})}}" class="btn btn-primary">Editar</a>
                        <a href="{{path('deleteSemestre',{'id': semestre.id})}}" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}